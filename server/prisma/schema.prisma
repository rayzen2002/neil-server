// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id              String  @id @unique
  name            String
  nickname        String
  email           String
  avatarUrl       String
  customAvatarUrl String?
  customSound     String?

  games Games[]
}

model Games {
  id     String   @id @unique
  player Player[]
}
